{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-unused-vars": "off",
        "no-undef": "off",
        "indent": ["error", "tab"],
        "no-tabs": "off",
        "eqeqeq": "off",
        "no-unmodified-loop-condition": "off",
        "no-extend-native": "off",
        "no-array-constructor": "off",
        "no-mixed-spaces-and-tabs": "off",
        "camelcase": "off",
        "no-mixed-operators": "off",
        "semi": "off",
        "space-before-function-paren":"off"
    }
}